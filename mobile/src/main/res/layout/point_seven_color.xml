 	    android:id="@+id/point_two" 
 	    android:layout_width="0dp"
 	    android:layout_weight="1"
 	    android:layout_height="wrap_content"
 	    android:background="@drawable/image_shape_orange"
 	    android:visibility="invisible"/>
