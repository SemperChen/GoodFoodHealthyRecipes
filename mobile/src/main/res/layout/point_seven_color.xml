 	    android:visibility="invisible"/>
 	<View 
 	    android:id="@+id/point_five"
 	    android:layout_width="0dp"
 	    android:layout_weight="1"
 	    android:layout_height="wrap_content"
 	    android:background="@drawable/image_shape_cyan"
 	    android:visibility="invisible"/>
 	<View 
 	    android:id="@+id/point_six"
 	    android:layout_width="0dp"
 	    android:layout_weight="1"
 	    android:layout_height="wrap_content"
 	    android:background="@drawable/image_shape_blue"
 	    android:visibility="invisible"/>
 	<View 
 	    android:id="@+id/point_seven"
 	    android:layout_width="0dp"
 	    android:layout_weight="1"
 	    android:layout_height="wrap_content"
 	    android:background="@drawable/image_shape_purple"
 	    android:visibility="invisible"/> 
</LinearLayout>
