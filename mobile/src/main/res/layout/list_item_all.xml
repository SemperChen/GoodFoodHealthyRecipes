<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/all_cardview"
        style="@style/CardView.AllStyle">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content">

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/bg_recommend_favorites_selector"/>

            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:textSize="14dp"
                    android:textColor="@color/theme_colorWhite"
                    android:text="爆炒鱿鱼"/>
            <TextView
                    android:layout_below="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_colorWhite"
                    android:textSize="12dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="一个很蒂丽舍司的食物，吃了包你满意"/>
        </RelativeLayout>

        <ImageView
                android:id="@+id/all_info_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"/>



    </LinearLayout>


</android.support.v7.widget.CardView>