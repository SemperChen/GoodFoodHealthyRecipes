<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <com.semperchen.goodfoodhealthyrecipes.mobile.ui.widget.NoClickLinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/joke_ll_conent"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@android:color/white"
                  android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <include layout="@layout/toolbar"/>
        <com.semperchen.goodfoodhealthyrecipes.mobile.ui.widget.CollectionView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:iosched="http://schemas.android.com/apk/res-auto"
                android:id="@+id/joke_content_collection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:layout_marginStart="@dimen/joke_menu_hz_margin"
                android:layout_marginEnd="@dimen/joke_menu_hz_margin"
                android:clipToPadding="false"
                iosched:internalPadding="4dp"/>
    </com.semperchen.goodfoodhealthyrecipes.mobile.ui.widget.NoClickLinearLayout>
    <FrameLayout
            android:id="@+id/joke_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <RelativeLayout
            xmlns:zhy="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rl_gif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/no_a_black"
            android:visibility="gone">
        <pl.droidsonroids.gif.GifImageView
                android:id="@+id/img_gifview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        <com.semperchen.goodfoodhealthyrecipes.mobile.ui.widget.HorizontalProgressBarWithNumber
                android:id="@+id/pb_gifloading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="100"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                zhy:progress_reached_color="#ff0000ff"
                zhy:progress_text_color="#ff0000ff"
                zhy:progress_unreached_color="@color/text_white_87"/>
 <!--       <com.semperchen.goodfoodhealthyrecipes.mobile.ui.widget.ProgressView
                android:id="@+id/pb_gifloading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:layout_centerInParent="true"
                android:background="@color/text_white_87"
                style="?android:attr/progressBarStyleHorizontal"/>-->
    </RelativeLayout>
</RelativeLayout>
