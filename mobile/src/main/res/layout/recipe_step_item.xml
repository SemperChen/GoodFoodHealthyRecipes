<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recipe_step_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_recipe_content">

    <TextView
            android:id="@+id/recipe_step_item_text"
            android:layout_toLeftOf="@+id/recipe_step_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/recipe_step_item_textsize"
            android:layout_margin="@dimen/recipe_step_item_text_margin"/>

    <ImageView
            android:id="@+id/recipe_step_item_image"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
</RelativeLayout>