<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                              android:id="@+id/img_avatar"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_centerVertical="true"
                              android:paddingTop="7dp"
                              android:paddingLeft="10dp"
                              android:src="@mipmap/ic_discovery_default_avatar"/>
                        <TextView
                              android:id="@+id/tv_name"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:paddingTop="7dp"
                              android:paddingLeft="18dp"
                              android:layout_toRightOf="@+id/img_avatar"
                              android:layout_centerVertical="true"
                              android:singleLine="true"
                              android:textSize="18sp"
                              android:text="一起哈啤"/>
                </RelativeLayout>
                <FrameLayout
                        android:id="@+id/rl_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_avatar"
                        android:layout_marginTop="5dp"
                        android:paddingBottom="10dp">
                        <TextView
                                android:id="@+id/tv_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="@android:color/black"
                                android:text="@string/joke_item_value_text"
                                android:visibility="gone"/>
                        <ImageView
                                android:id="@+id/img_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:background="@drawable/image_commend_002"/>
                </FrameLayout>
        </LinearLayout>
        </ScrollView>
        <RelativeLayout
                 android:id="@+id/rl_comments"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="10dp"
                 android:layout_marginLeft="15dp"
                 android:layout_marginRight="15dp"
                 android:paddingLeft="15dp"
                 android:background="@color/commens_color">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="该评论正在审核中..."/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">
                <ImageView
                        android:id="@+id/img_good"
                        style="@style/joke_item_bottom_img"
                        android:src="@mipmap/ic_digg_normal"/>
                <TextView
                        android:id="@+id/tv_good"
                        style="@style/joke_item_bottom_text"
                        android:layout_toRightOf="@+id/img_good"
                        android:text="100万"/>
                <ImageView
                        android:id="@+id/img_bury"
                        android:layout_toRightOf="@+id/tv_good"
                        style="@style/joke_item_bottom_img"
                        android:src="@mipmap/ic_bury_normal"/>
                <TextView
                        android:id="@+id/tv_bury"
                        style="@style/joke_item_bottom_text"
                        android:layout_toRightOf="@+id/img_bury"
                        android:text="1万"/>
                <ImageView
                        android:id="@+id/img_hot"
                        android:layout_toRightOf="@+id/tv_bury"
                        style="@style/joke_item_bottom_img"
                        android:src="@mipmap/hot_commenticon_textpage"/>
                <TextView
                        android:id="@+id/tv_hot"
                        style="@style/joke_item_bottom_text"
                        android:layout_toRightOf="@+id/img_hot"
                        android:text="973"/>
        </RelativeLayout>
</LinearLayout>
