<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:id="@+id/content"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginEnd="48dp"
                app:expandedTitleMarginStart="32dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <!--old image view start-->

            <ImageView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/image_topic_001"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"/>
            <!--old image view end-->

            <android.support.v7.widget.Toolbar
                    android:id="@+id/anim_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fffffff0"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/theme_colorWhite"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_recipe_title">

                <TextView
                        android:id="@+id/recipe_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24dp"
                        android:textColor="@color/ba"
                        android:text="面食番茄虾仁"/>
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_recipe_title">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/all_item_author_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/image_commend_004"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/background_recipe_title_bottom"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:gravity="center_vertical">

                    <TextView
                            android:id="@+id/all_item_author_name"
                            android:layout_width="wrap_content"
                            android:textColor="#b4000000"
                            android:paddingBottom="3dp"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text="谁动了我的奶酪"/>

                    <TextView
                            android:id="@+id/time_written"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray_1"
                            android:textSize="10dp"
                            android:text="2015年4月"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_recipe_title">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_recipe_another">

                    <TextView
                            android:id="@+id/text_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="介绍"
                            android:layout_marginBottom="8dp"
                            android:textSize="18dp"
                            android:textColor="@color/text_brown"/>
                </LinearLayout>


                <LinearLayout
                        android:id="@+id/info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_marginBottom="5dp"
                            android:text="99安卓网为您提供最新应用宝下载。应用宝是腾讯应用中心专为智能手机用户打造的应用获取平台。应用宝在应用搜索方面推出“唯一”搜索，可有效帮助用户解决下应用下载中误下载山寨应用的问题"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_recipe_title">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_recipe_another">

                    <TextView
                            android:id="@+id/recipe_ingredients_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="配料"
                            android:layout_marginBottom="8dp"
                            android:textSize="18dp"
                            android:textColor="@color/text_brown"/>
                </LinearLayout>


                <LinearLayout
                        android:id="@+id/ingredients_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_marginBottom="5dp"
                            android:text="1/2磅的天使面食"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_marginBottom="5dp"
                            android:text="3/4磅的原料，去皮，去内脏虾（中型）"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_marginBottom="5dp"
                            android:text="4中等成熟的西红柿"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_marginBottom="5dp"
                            android:text="3瓣大蒜，切碎"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_marginBottom="5dp"
                            android:text="1/3杯撕裂新鲜罗勒叶"/>

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:background="@color/background_material_light">
                        <TextView
                                android:id="@+id/text_step"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/text_brown"
                                android:text="步骤"/>
                    </LinearLayout>


                    <RelativeLayout
                            android:id="@+id/step1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_recipe_content">

                        <TextView
                                android:layout_toLeftOf="@+id/image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:layout_margin="8dp"
                                android:text="1.烧热1汤匙的橄榄油在中高热量的大炒出锅。添加虾的锅，煮1分钟。在锅里翻虾了。降低热量中。"/>

                        <ImageView
                                android:id="@+id/image"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/image_commend_009"
                                android:layout_width="100dp"
                                android:layout_height="100dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                            android:id="@+id/step2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_recipe_content">

                        <TextView
                                android:layout_toLeftOf="@+id/image2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:layout_margin="8dp"
                                android:text="2.烧热1汤匙的橄榄油在中高热量的大炒出锅。添加虾的锅，煮1分钟。在锅里翻虾了。降低热量中。"/>

                        <ImageView
                                android:id="@+id/image2"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/image_commend_004"
                                android:layout_width="100dp"
                                android:layout_height="100dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                            android:id="@+id/step3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_recipe_content">

                        <TextView
                                android:layout_toLeftOf="@+id/image3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:layout_margin="8dp"
                                android:text="3.烧热1汤匙的橄榄油在中高热量的大炒出锅。添加虾的锅，煮1分钟。在锅里翻虾了。降低热量中。"/>

                        <ImageView
                                android:id="@+id/image3"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/image_commend_005"
                                android:layout_width="100dp"
                                android:layout_height="100dp"/>
                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_recipe_other">

                <TextView
                        android:id="@+id/text_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_brown"
                        android:textSize="18dp"
                        android:text="小贴士"/>

                <LinearLayout
                        android:id="@+id/tips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="16dp"
                            android:text="1.烧热1汤匙的  橄榄油在中高热量的大炒出锅。添加虾的锅，煮1分钟。"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="16dp"
                            android:text="2.烧热1汤匙的  橄榄油在中高热量的大炒出锅。添加虾的锅，煮1分钟。"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="16dp"
                            android:text="3.烧热1汤匙的  橄榄油在中高热量的大炒出锅。添加虾的锅，煮1分钟。"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_recipe_title">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:background="@drawable/bg_recipe_another">

                    <TextView
                            android:id="@+id/text_oher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="其他"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:textSize="18dp"
                            android:textColor="@color/text_brown"/>
                </LinearLayout>


                <LinearLayout
                        android:id="@+id/other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:text="本信息由好豆菜谱提供"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="3dp"
                            android:text="更多详情请点击"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="3dp"
                            android:text="这里"/>

                </LinearLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="30dp"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:id="@+id/image_logo"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/image_recipe_2"/>

                    <!--<TextView
                            android:id="@+id/logo"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="55dp"
                               android:layout_height="wrap_content"
                            android:textColor="@color/text_gray_1"
                            android:textSize="20dp"
                            android:text="健康美食菜谱"/>-->
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <!--<android.support.v7.widget.RecyclerView
            android:id="@+id/scrollableview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />-->


    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:src="@mipmap/ic_favorite_white"
            app:layout_anchor="@+id/appbar"
            app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>

