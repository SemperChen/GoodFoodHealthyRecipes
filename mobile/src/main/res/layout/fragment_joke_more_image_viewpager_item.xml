<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:zhy="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/black">
        <TextView
            android:id="@+id/tv_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/background_card"
            android:text="8/18"/>
        <ImageView
            android:id="@+id/img_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"/>
        <RelativeLayout
                android:id="@+id/rl_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/img_gifview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
                <com.semperchen.goodfoodhealthyrecipes.mobile.ui.widget.HorizontalProgressBarWithNumber
                        android:id="@+id/pb_gifloading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        zhy:progress_reached_color="#ff0000ff"
                        zhy:progress_text_color="#ff0000ff"
                        zhy:progress_unreached_color="@color/text_white_87"/>
        </RelativeLayout>
</RelativeLayout>