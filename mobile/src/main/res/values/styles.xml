<resources>

    <!-- Base application theme. -->
    <style name="Theme.GoodFoodHealthyRecipes" parent="Theme.GoodFoodHealthyRecipes.Base" />

    <style name="Theme.GoodFoodHealthyRecipes.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:windowBackground">@color/background_window</item>

        <item name="android:activityOpenEnterAnimation">@anim/activity_slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_slide_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_slide_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_slide_out</item>

</style>

    <style name="Theme.GoodFoodHealthyRecipes.Recommend.CardViewStyle" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/recommend_cardview_margin</item>
        <item name="android:clickable">true</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardCornerRadius">@dimen/recommend_corner_radius</item>
    </style>

    <style name="Theme.GoodFoodHealthyRecipes.Topic.CardViewStyle" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/topic_cardview_margin</item>
        <item name="android:clickable">true</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardCornerRadius">@dimen/topic_corner_radius</item>
    </style>

    <style name="Theme.GoodFoodHealthyRecipes.All.CardViewStyle" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/all_cardview_margin</item>
        <item name="android:clickable">true</item>
        <item name="cardBackgroundColor">@android:color/holo_orange_light</item>
        <item name="cardCornerRadius">@dimen/all_corner_radius</item>
    </style>


</resources>
